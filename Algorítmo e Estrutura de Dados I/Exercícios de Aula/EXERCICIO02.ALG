Algoritmo "exercicio02"
// Autor(a)    : Thales O. Nunes
// Data atual  : 25/08/2018
Var

   AA, AN, IA, I2050 : inteiro

Inicio

   escreval ("Digite o ano atual")
   leia (AA)
   escreval ("Digite seu ano de nascimento: ")
   leia (AN)
   IA <- (AA - AN)
   I2050 <- (2050 - AA + IA)
   escreval ("Sua idade atual é: ", IA)
   escreval ("Sua idade em 2050 será: ", I2050)
   

Fimalgoritmo